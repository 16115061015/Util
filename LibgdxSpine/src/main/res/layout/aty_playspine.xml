<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/playSpine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="播放全屏礼物"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/playSpine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:gravity="center"
        android:text="播放小屏礼物"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/playSpine"
        app:layout_constraintStart_toStartOf="@+id/spine"
        app:layout_constraintTop_toBottomOf="@+id/playSpine" />

    <TextView
        android:id="@+id/playSpine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:gravity="center"
        android:text="播放2小屏礼物"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/playSpine2"
        app:layout_constraintStart_toStartOf="@+id/spine"
        app:layout_constraintTop_toBottomOf="@+id/playSpine2" />

    <com.zjh.gamelibgdx.SpineView
        android:id="@+id/spine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>